<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{post.title}}</title>
</head>
<body>
  <h1>{{post.title}}</h1>
  <p>By {{post.User.username}} | {{post.createdAt}}</p>
  <p>{{post.content}}</p>

  <h2>Comments</h2>
  {{#each post.Comments}}
    <div>
      <p>By {{this.User.username}} | {{this.createdAt}}</p>
      <p>{{this.content}}</p>
    </div>
  {{/each}}

  {{#if user}}
    <form action="/posts/{{post.id}}/comments" method="POST">
      <textarea name="content" rows="4" cols="50"></textarea>
      <button type="submit">Add Comment</button>
    </form>
  {{/if}}
</body>
</html>
